<form id="show-request-form" class="form-horizontal">
  <h2 class="form-signin-heading">View Request: <%= request.id %></h2>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name:</label>
    <div class="col-sm-10">
      <p><%= request.name %></p>
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email:</label>
    <div class="col-sm-10">
      <p><%= request.email %></p>
    </div>
  </div>

  <div class="form-group">
    <label for="category" class="col-sm-2 control-label">Type of request:</label>
    <div class="col-sm-10">
      <select class="form-control" name="category" required="true">
        <% _.each(categories, function(category) { %>
          <% if (request.category == category.id) { %>
            <option value="<%= category.id %>" selected="true"><%= category.name %></option>
          <% } else { %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% } %>
        <% }); %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="request" class="col-sm-2 control-label">Request:</label>
    <div class="col-sm-10">
      <p><%= request.request %></p>
    </div>
  </div>

  <div class="checkbox">
    <label for="contact_okay">
      <% if (request.contact_okay == true) { %>
        <p>Okay to contact.</p>
      <% } else { %>
        <p>NOT Okay to contact.</p>
      <% } %>
    </label>
  </div>
</form>
